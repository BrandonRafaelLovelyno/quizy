<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_div_transparent_rounded"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="@string/hero_title_find_quiz"
            android:textColor="@color/neutral_100"
            android:fontFamily="@font/montserrat_extrabold"/>

        <LinearLayout
            android:id="@+id/btnCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/neutral_100"
            android:orientation="horizontal"
            android:background="@drawable/bg_button_rounded_blue"
            android:layout_marginTop="10sp">
            <TextView
                android:id="@+id/txtBtnCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/hero_btn_find_quiz"
                android:textColor="@color/neutral_100"
                android:fontFamily="@font/montserrat_bold"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgHero"
        android:layout_width="168dp"
        android:layout_height="172dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_find_quiz"
        android:contentDescription="@string/hero_content_description_find_quiz"
        />
</LinearLayout>

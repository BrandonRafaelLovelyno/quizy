<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_div_transparent_rounded"
    android:orientation="horizontal"
    android:paddingStart="30dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="158dp"
        android:contentDescription="@string/hero_content_description_make_quiz"
        android:scaleType="centerCrop"
        android:src="@drawable/img_create_quiz" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/hero_title_make_quiz"
            android:textColor="@color/neutral_100"
            android:textSize="26sp" />

        <LinearLayout
            android:id="@+id/actionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@drawable/bg_button_pink_rounded"
            android:orientation="horizontal"
            android:textColor="@color/neutral_100">

            <TextView
                android:id="@+id/btnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hero_btn_make_quiz"
                android:textColor="@color/neutral_100"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
